<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.vuw.project1.riverwatch.ui.MainActivity"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/homescreen_phone"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="25dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/wai_logo"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:id="@+id/wainzLogo"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Incident Report"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:id="@+id/reportButton"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nitrate Test"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:id="@+id/nitrateButton" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bluetooth"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:id="@+id/bluetoothButton" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="History"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:id="@+id/historyButton" />
    </LinearLayout>
</RelativeLayout>